<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FeedListItemLinearLayout">
        <item name="android:padding">@dimen/feed_item_padding</item>
    </style>

    <style name="FeedListItem">
        <item name="android:background">@color/feed_list_background</item>
        <item name="android:layout_marginTop">@dimen/feed_item_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/feed_item_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/feed_item_margin_horizontal</item>
    </style>
</resources>
